<section id="hero" class="w-screen h-screen snap-center shrink-0 border-r border-[#333] bg-[#0c0c0c] flex flex-col overflow-hidden">
  <!-- Terminal Title Bar -->
  <div class="bg-[#1e1e1e] px-4 py-2 flex items-center gap-2 border-b border-[#333] shrink-0 h-10">
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-[#ff5f56]"></div>
      <div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
      <div class="w-3 h-3 rounded-full bg-[#27c93f]"></div>
    </div>
    <div class="flex-grow text-center text-[10px] text-gray-500 font-medium">
      greeting.sh â€” 80x24
    </div>
  </div>
  
  <div class="p-8 overflow-y-auto flex-grow flex flex-col items-center">
    <div class="terminal-history space-y-4 max-w-4xl w-full">
      <div class="space-y-4">
        <div class="flex gap-2 text-[#27c93f]">
          <span>[user@hyuse ~]$</span>
          <span class="text-[#d4d4d4]">whoami</span>
        </div>
        
        <div class="pl-4">
          <h1 class="text-3xl sm:text-5xl font-bold text-white mb-4">
            CJ (Hyuse)
          </h1>
          <p class="text-lg text-[#888] max-w-2xl">
            > Full Stack Developer
            <br />
            > Crafting modern, accessible, and performant web applications.
          </p>
        </div>

        <div class="flex gap-2 text-[#27c93f] pt-4">
          <span>[user@hyuse ~]$</span>
          <span class="text-[#d4d4d4]">ls -a ./highlights</span>
        </div>

        <div class="pl-4 flex flex-wrap gap-4 pt-2">
          <button onclick="window.dispatchEvent(new CustomEvent('terminal-nav', {detail: 'projects'}))" class="text-[#27c93f] hover:underline decoration-dashed underline-offset-4 cursor-pointer text-left">
            drwxr-xr-x  projects/
          </button>
          <button onclick="window.dispatchEvent(new CustomEvent('terminal-nav', {detail: 'contact'}))" class="text-[#ffbd2e] hover:underline decoration-dashed underline-offset-4 cursor-pointer text-left">
            -rw-r--r--  contact.sh
          </button>
          <span class="text-[#888]">
            -rw-r--r--  resume.pdf
          </span>
        </div>
      </div>
    </div>

    <!-- Active Input Area -->
    <div class="max-w-4xl w-full mt-6 shrink-0">
      <div class="flex flex-col gap-2">
        <div class="flex gap-2 text-[#27c93f] relative">
          <span>[user@hyuse ~]$</span>
          <div class="flex-grow relative">
            <input 
              type="text" 
              class="terminal-input bg-transparent border-none outline-none text-[#d4d4d4] font-mono w-full caret-[#27c93f] focus:ring-0 p-0 placeholder-[#333]" 
              placeholder="type '?' for help..." 
              autocomplete="off"
              autofocus
            />
            <!-- Inline Suggestions -->
            <div class="terminal-suggestions absolute left-0 bottom-full mb-2 bg-[#1e1e1e] border border-[#333] p-2 hidden z-20 min-w-[200px] shadow-xl">
              <div class="text-[9px] text-[#555] mb-1 uppercase tracking-widest">Suggestions</div>
              <div class="suggestion-list flex flex-col gap-1"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>