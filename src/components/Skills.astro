---
const skills = {
  "Frontend": ["React", "Vue", "Astro", "TypeScript", "Tailwind CSS", "Next.js"],
  "Backend": ["Node.js", "Python", "Go", "PostgreSQL", "Redis", "GraphQL"],
  "Tools": ["Git", "Docker", "AWS", "Figma", "Linux", "CI/CD"]
};
---

<section id="skills" class="w-screen h-screen snap-center shrink-0 border-r border-[#333] bg-[#0c0c0c] flex flex-col overflow-hidden">
  <!-- Terminal Title Bar -->
  <div class="bg-[#1e1e1e] px-4 py-2 flex items-center gap-2 border-b border-[#333] shrink-0 h-10">
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-[#ff5f56]"></div>
      <div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
      <div class="w-3 h-3 rounded-full bg-[#27c93f]"></div>
    </div>
    <div class="flex-grow text-center text-[10px] text-gray-500 font-medium">
      fetch_skills.py — 80x24
    </div>
  </div>

  <div class="p-8 overflow-y-auto flex-grow flex items-center justify-center">
    <div class="space-y-6 max-w-5xl w-full">
      <div class="flex gap-2 text-[#27c93f]">
        <span>[user@hyuse ~]$</span>
        <span class="text-[#d4d4d4]">fetch --skills</span>
      </div>

      <div class="space-y-8 pl-4">
        {Object.entries(skills).map(([category, items]) => (
          <div class="space-y-3">
            <h3 class="text-sm font-bold text-[#ffbd2e] flex items-center gap-2">
              <span class="text-[#888]">::</span> {category.toLowerCase()}
            </h3>
            <div class="space-y-1">
              {items.map((skill) => (
                <div class="group flex items-center gap-3 text-xs">
                  <span class="text-[#555]">├──</span>
                  <span class="text-[#d4d4d4] group-hover:text-[#27c93f] transition-colors">{skill}</span>
                </div>
              ))}
              <div class="text-[#555] text-xs">└── (end)</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
