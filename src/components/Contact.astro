<section id="contact" class="w-screen h-screen snap-center shrink-0 border-r border-[#333] bg-[#0c0c0c] flex flex-col overflow-hidden">
  <!-- Terminal Title Bar -->
  <div class="bg-[#1e1e1e] px-4 py-2 flex items-center gap-2 border-b border-[#333] shrink-0 h-10">
    <div class="flex gap-1.5">
      <div class="w-3 h-3 rounded-full bg-[#ff5f56]"></div>
      <div class="w-3 h-3 rounded-full bg-[#ffbd2e]"></div>
      <div class="w-3 h-3 rounded-full bg-[#27c93f]"></div>
    </div>
    <div class="flex-grow text-center text-[10px] text-gray-500 font-medium">
      contact.sh â€” 80x24
    </div>
  </div>

  <div class="p-8 overflow-y-auto flex-grow flex items-center justify-center">
    <div class="space-y-6 max-w-4xl w-full">
      <div class="flex gap-2 text-[#27c93f]">
        <span>[user@hyuse ~]$</span>
        <span class="text-[#d4d4d4]">./contact.sh</span>
      </div>

      <div class="max-w-2xl pl-4 space-y-8">
        <div class="text-xs text-[#888] italic">
          # Initializing secure connection... [DONE]
          <br />
          # Awaiting user input...
        </div>

        <form class="space-y-6">
          <div class="space-y-4">
            <div class="space-y-1">
              <label for="name" class="block text-[10px] text-[#ffbd2e] font-mono uppercase">guest@name:~$</label>
              <input type="text" name="name" id="name" class="w-full bg-[#111] border border-[#333] px-3 py-2 text-xs text-[#d4d4d4] focus:outline-none focus:border-[#27c93f] transition-colors font-mono" placeholder="enter name..." />
            </div>
            <div class="space-y-1">
              <label for="email" class="block text-[10px] text-[#ffbd2e] font-mono uppercase">guest@email:~$</label>
              <input type="email" name="email" id="email" class="w-full bg-[#111] border border-[#333] px-3 py-2 text-xs text-[#d4d4d4] focus:outline-none focus:border-[#27c93f] transition-colors font-mono" placeholder="enter email..." />
            </div>
            <div class="space-y-1">
              <label for="subject" class="block text-[10px] text-[#ffbd2e] font-mono uppercase">guest@subject:~$</label>
              <input type="text" name="subject" id="subject" class="w-full bg-[#111] border border-[#333] px-3 py-2 text-xs text-[#d4d4d4] focus:outline-none focus:border-[#27c93f] transition-colors font-mono" placeholder="enter subject..." />
            </div>
            <div class="space-y-1">
              <label for="message" class="block text-[10px] text-[#ffbd2e] font-mono uppercase">guest@message:~$</label>
              <textarea id="message" name="message" rows="4" class="w-full bg-[#111] border border-[#333] px-3 py-2 text-xs text-[#d4d4d4] focus:outline-none focus:border-[#27c93f] transition-colors font-mono resize-none" placeholder="enter message..."></textarea>
            </div>
          </div>

          <div>
            <button type="submit" class="bg-[#27c93f]/10 border border-[#27c93f] text-[#27c93f] px-6 py-2 text-xs font-bold hover:bg-[#27c93f] hover:text-[#0c0c0c] transition-all cursor-pointer uppercase tracking-widest">
              Execute Send
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
